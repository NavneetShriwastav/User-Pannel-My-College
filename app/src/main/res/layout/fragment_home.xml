<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/colorPrimary"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:iss_auto_cycle="true"
                    app:iss_period="1000"
                    app:iss_delay="1000"
                    app:iss_text_align="CENTER" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/latobold"
                android:text="About NIT Rourkela"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />

            <TextView

                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:fontFamily="@font/latoregular"
                android:text="@string/about_college"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"

                android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="36dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/text_margin"

                    android:fontFamily="@font/latobold"
                    android:text="Departments"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size" />

                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Computer Science Engineering"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Mechanical Engineering"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/bold"
                            android:text="Electronics Engineering"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Civil Engineering"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Mining Engineering"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Biotechnology Engineering"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Food Processing Engineering"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Physics Engineering"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Chemistry"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:fontFamily="@string/regular"
                            android:text="Maths"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />



                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_margin">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@string/regular"
                    android:text="Contact Details"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    android:fontFamily="@string/regular"
                    android:text="National Institute of Technology Rourkela"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    android:fontFamily="@string/regular"
                    android:text="Sector-1, Rourkela, Odisha, India - 769008 "
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/map"
                    android:src="@drawable/loc"
                    android:layout_marginHorizontal="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow us on"
                    android:fontFamily="@string/regular"
                    android:textColor="@color/white"
                    >

                </TextView>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:layout_margin="15dp"
                   >


                   <ImageView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:id="@+id/insta"
                       android:src="@drawable/instagram"
                       android:layout_marginHorizontal="@dimen/text_margin"

                       ></ImageView>


                   <ImageView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:id="@+id/twi"
                       android:src="@drawable/twitter"
                       android:layout_marginHorizontal="@dimen/text_margin"
                       ></ImageView>


                   <ImageView
                       android:layout_width="34dp"
                       android:layout_height="34dp"
                       android:id="@+id/fb"
                       android:src="@drawable/facebook"
                       android:layout_marginHorizontal="@dimen/text_margin"

                       ></ImageView>

                   <ImageView
                       android:layout_width="37dp"
                       android:layout_height="37dp"
                       android:id="@+id/ld"
                       android:src="@drawable/linkedin"
                       android:layout_marginHorizontal="@dimen/text_margin"

                       ></ImageView>

               </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
